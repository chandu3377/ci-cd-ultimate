pipeline {
  agent {
    docker {
      image 'chandu3377/maven-chandu-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        //git branch: 'main', url: 'https://github.com/chandu3377/ci-cd-ultimate.git'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-argocd-kube/spring-boot-app && mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://10.11.12.53:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd java-maven-argocd-kube/spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "chandu3377/maven-chandu-docker-agent:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-argocd-kube/spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd java-maven-argocd-kube/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "ci-cd-ultimate"
            GIT_USER_NAME = "chandu3377"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "chanduprakash3377@gmail.com"
                    git config user.name "chandu3377"
                    git checkout main
                    if [ ! -f .gitignore ]; then
                    echo '/java-maven-argocd-kube/spring-boot-app/target/' > .gitignore
                    else
                    echo '/java-maven-argocd-kube/spring-boot-app/target/' >> .gitignore
                    fi
                    git clean -fd
                    BUILD_NUMBER=${BUILD_NUMBER}
                    # Clean untracked files (e.g., build artifacts) before committing
                    # Update deployment.yml with the new image tag
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-argocd-kube/spring-boot-app-manifests/deployment.yml
                    # Debugging: Print the contents of the file to verify if the change took place
                    cat java-maven-argocd-kube/spring-boot-app-manifests/deployment.yml
                    git add java-maven-argocd-kube/spring-boot-app-manifests/deployment.yml
                    git add .gitignore 
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}
